@using App.Models

@{
    // Lấy dữ liệu từ ViewData và ép kiểu an toàn
    var product = ViewData["product"] as App.Models.ProductModel;
}

@if (product != null)
{
    <p>@product.Name</p>
    <div class="card bg-primary text-white">
        <h1 class="card-header">@product.Name</h1>
        <div class="card-body">
            <p class="card-text">
                Gia san pham: @product.Price
            </p>
        </div>
    </div>
}
else
{
    // Hiển thị thông báo nếu sản phẩm không tồn tại
    <p class="alert alert-danger">Sản phẩm không tìm thấy.</p>
}