@model App.Models.Contacts.Contact

@{
    ViewData["Title"] = "Gui lien he toi AppMvc";
}


<div class="row">
    <div class="col-md-4">
        <div class="contact-firstcol p-2 h-100">
            <img src="~/images/email.png"/>
            <h1>@ViewData["Title"]</h1>
            <h4>Chung toi luon lang nghe y kien cua ban</h4>
        </div>
    </div>
    <div class="col-md-8">
        <form asp-action="SendContact" class="formcontact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" >
                <label asp-for="Fullname" class="control-label"></label>
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

             <div class="form-group" style="margin-top: 20px;">
                <label asp-for="Message" class="control-label"></label>
                <textarea rows="5" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
               
            </div>
    
            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Gui lien he" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



